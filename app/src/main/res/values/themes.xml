<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Freezer" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/selective_yellow</item>
        <item name="colorPrimaryVariant">@color/princeton_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/penn_red</item>
        <item name="colorSecondaryVariant">@color/rosewood</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Навигейшн бар -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <!-- Сплэш скрин -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">?attr/colorPrimaryVariant</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/splash_logo_light</item>

    </style>
</resources>